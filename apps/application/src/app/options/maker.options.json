{
    "$schema": "../../../../../node_modules/nx-electron/src/validation/maker.schema.json",
    "productName": "Lunchpad",
    "copyright": "Copyright © 2020 Tillmann Hübner",
    "npmRebuild": true,
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "ruohki",
        "repo": "lunchpad"
      }
    ],
    "linux": {
      "target": "zip",
      "asar": true
    },
    "win": {
      "icon": "build/logo.ico",
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "asar": true
    },
    "mac": {
        "target":"dmg",
        "icon": "build/icon.png"
    },
    "dmg": {
      "background": "build/background.png"
    },
    "appId": "com.electron.lunchpad",
    "generateUpdatesFilesForAllChannels": true
}